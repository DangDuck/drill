<div class="row">
    <div class="col-md-8">
        <h2>Contact List</h2>
        <a href="/contact/add" class="btn btn-primary">New Contact</a>
        <% if (msg.length > 0) { %>
        <div class="alert alert-success mt-2" role="alert"><%= msg %></div>
        <% } %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% if (contacts.length === 0) { %>
                <tr>
                    <td colspan="4">
                        <div class="alert alert-danger" role="alert">
                            Contact still empty!
                        </div>
                        <% } else { %> <% contacts.forEach((contact, i) => { %>
                    </td>
                </tr>

                <tr>
                    <th scope="row"><%= i+1 %></th>
                    <td><%= contact.name %></td>
                    <td><%= contact.phone %></td>
                    <td>
                        <a
                            href="./contact/<%= contact.name %>"
                            class="btn badge rounded-pill bg-info"
                            ><i class="bi bi-info-circle"></i> detail</a
                        >
                    </td>
                </tr>
                <% }) %><% } %>
            </tbody>
        </table>
    </div>
</div>
